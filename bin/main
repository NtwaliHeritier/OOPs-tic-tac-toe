#!/usr/bin/env ruby
require './lib/player.rb'
require './lib/game.rb'

game = Game.new
one = game.game_array
def info(args, args1)
  name = ''
  puts 'Welcome to Tic-Tac-Toe Game!!'
  loop do
    puts 'Player1 enter your name.'
    name = gets.chomp.capitalize
    break if name != '' && name != ' '
  end
  args.player1.name = name
  puts "Hi, #{args.player1.name} your key for the game is #{args.player1.key}"
  loop do
    puts 'Player2 enter your name.'
    name = gets.chomp.capitalize
    break if name != '' && name != ' '
  end
  args.player2.name = name
  puts "Hi, #{args.player2.name} your key for the game is #{args.player2.key}"
  puts 'Here is the game board'
  gameboard(args1)
end

def gameboard(one)
  9.times do |i|
    print " #{one[i]} | " if i % 3 != 2
    puts " #{one[i]} " if i % 3 == 2
  end
end

def move(player_name, pos1)
  loop do
    puts "Hi, #{player_name.name} please enter the position for your key."
    pos1 = gets.chomp.to_i
    break if position_check(pos1, player_name.key)
  end
  player_name.array.push(pos1)
end

def win(player)
  puts "Yay..!!#{player} won."
end

def tie
  puts "It's draw match!!"
end

def position_check(pos, key)
  case pos
  when 1..9
    if @game_array[pos - 1].is_a?(Integer)
      @game_array[pos - 1] = key
      true
    else
      puts 'Position already taken. Please choose different position.'
      false
    end
  else
    puts 'Invalid position. Please choose again.'
    false
  end
end

info(game, one)
game.game_start
